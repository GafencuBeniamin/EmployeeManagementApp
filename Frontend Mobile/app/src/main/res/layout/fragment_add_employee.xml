<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddEmployeeFragment">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/employee_svg"
        app:tint="@color/white"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Nume:"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/name_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="@id/name_title"
        app:layout_constraintBottom_toBottomOf="@id/name_title"
        app:layout_constraintLeft_toRightOf="@id/name_title"
        android:minWidth="100dp"/>
    <TextView
        android:id="@+id/departmentId_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_title"
        app:layout_constraintLeft_toLeftOf="@id/name_title"
        android:text="ID Departament:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/departmentId_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/departmentId_title"
        app:layout_constraintBottom_toBottomOf="@id/departmentId_title"
        app:layout_constraintTop_toTopOf="@id/departmentId_title"
        android:backgroundTint="@color/white"
        android:textSize="20dp"
        android:minWidth="50dp"
        android:inputType="phone"/>
    <TextView
        android:id="@+id/managerId_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/departmentId_title"
        app:layout_constraintLeft_toLeftOf="@id/departmentId_title"
        android:textSize="20dp"
        android:text="ID Manager:"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/managerId_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/managerId_title"
        app:layout_constraintBottom_toBottomOf="@id/managerId_title"
        app:layout_constraintLeft_toRightOf="@id/managerId_title"
        android:minWidth="50dp"
        android:backgroundTint="@color/white"
        android:textSize="20dp"
        android:inputType="phone"/>
    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/managerId_title"
        app:layout_constraintLeft_toLeftOf="@id/managerId_title"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/email_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="@id/email_title"
        app:layout_constraintBottom_toBottomOf="@id/email_title"
        app:layout_constraintLeft_toRightOf="@id/email_title"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm changes and add Employee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp" />


</androidx.constraintlayout.widget.ConstraintLayout>