<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/department_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="description"
        app:layout_constraintTop_toTopOf="@id/description_title"
        app:layout_constraintLeft_toRightOf="@id/description_title"/>
    <TextView
        android:id="@+id/department_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        app:layout_constraintTop_toTopOf="@id/id_title"
        app:layout_constraintLeft_toRightOf="@id/id_title"/>
    <TextView
        android:id="@+id/department_parent_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parentId"
        app:layout_constraintTop_toTopOf="@id/parent_title"
        app:layout_constraintLeft_toRightOf="@id/parent_title"/>
    <TextView
        android:id="@+id/description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Descriere departament:"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/id_title"
        app:layout_constraintLeft_toLeftOf="@id/id_title"/>

    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-5dp"
        android:text="ID:"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon" />
    <TextView
        android:id="@+id/parent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:text="ID Parinte:"
        app:layout_constraintTop_toTopOf="@id/id_title"
        app:layout_constraintLeft_toRightOf="@id/department_id"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"

        android:src="@drawable/department_svg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>