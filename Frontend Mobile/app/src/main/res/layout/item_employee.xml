<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"

        android:src="@drawable/employee_svg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />
    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-5dp"
        android:text="ID:"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon" />
    <TextView
        android:id="@+id/employee_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        app:layout_constraintTop_toTopOf="@id/id_title"
        app:layout_constraintLeft_toRightOf="@id/id_title"/>
    <TextView
        android:id="@+id/manager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:text="ID Manager:"
        app:layout_constraintTop_toTopOf="@id/id_title"
        app:layout_constraintLeft_toRightOf="@id/employee_id"/>
    <TextView
        android:id="@+id/manager_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="managerId"
        app:layout_constraintTop_toTopOf="@id/manager_title"
        app:layout_constraintLeft_toRightOf="@id/manager_title"/>
    <TextView
        android:id="@+id/department_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/manager_id"
        app:layout_constraintTop_toTopOf="@id/manager_id"
        android:text="ID Departament:"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />
    <TextView
        android:id="@+id/department_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        app:layout_constraintLeft_toRightOf="@id/department_title"
        app:layout_constraintTop_toTopOf="@id/department_title"/>
    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nume:"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/id_title"
        app:layout_constraintLeft_toLeftOf="@id/id_title"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nume Prenume"
        app:layout_constraintLeft_toRightOf="@id/name_title"
        app:layout_constraintTop_toTopOf="@id/name_title"/>
    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintTop_toTopOf="@id/name"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@mail.com"
        app:layout_constraintLeft_toRightOf="@id/email_title"
        app:layout_constraintTop_toTopOf="@id/email_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>